<table>
  <tr>
    <th>Title</th>
    <% @users.each do |user| %>
    <th><%= user.name %></th>
    <% end %>
    <th>Total</th>
    <th />
  </tr>
  <tr>
    <% form_for :payment, :url => {:action => :save_payment} do |form| %>
    <%= form.hidden_field :user_id, :value => session[:user_id] %>
    <td><%= form.text_field :name, :size => 40 %></td>
    <% @users.each do |user| %>
    <td><input id="users" 
               type="checkbox"
               name="payment[users][]"
               value="<%= user.id %>" 
               checked="<%= 'yes' if !params[:payment].nil? and 
                        params[:payment][:users].member? user.id %>"/></td>
    <% end %>
    <td><%= form.text_field :value, :size => 10 %></td>
    <td><%= submit_tag "Add Payment", :class => "submit" %></td>
    <% end %>
  </tr>
  <%= render(:partial => "payment", :collection => payments) %>
</table>
