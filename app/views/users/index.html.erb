<h2>Listing Users</h2>

<table>
  <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Admin</th>
    <th></th>
  </tr>
  
  <% @users.each do |user| %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">

    <td>
      <%= user.username %>
    </td>

    <td>
      <%= user.name %>
    </td>

    <td>
      <% if user.admin? %>
      Yes
      <% else %>
      No
      <% end %>
    </td>

    <td>
      <%= link_to 'Edit', edit_user_path(user) %><br />
    </td>

  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
